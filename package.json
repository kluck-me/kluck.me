{
  "private": true,
  "name": "kluck.me",
  "scripts": {
    "build": "rm -rf dist && parcel build --no-source-maps 'src/**/!(_)*.{html,pug}' && cp src/{.nojekyll,CNAME} dist",
    "deploy": "npm run build && gh-pages -d dist",
    "fix": "run-s -c fix:*",
    "fix:prettier": "prettier --write .",
    "fix:prettier-package-json": "prettier-package-json --write",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:prettier-package-json": "prettier-package-json -l",
    "serve": "parcel serve 'src/**/!(_)*.{html,pug}'"
  },
  "dependencies": {
    "promise-worker": "2.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "reactstrap": "8.5.1"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "gh-pages": "3.1.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.5.0",
    "prettier": "2.6.2",
    "prettier-package-json": "2.6.3",
    "rimraf": "3.0.2"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
