extends ../common/_bootstrap-layout

append meta
  title viz

append styles
  link(rel='stylesheet' href='styles.styl')

block body
  .container-fluid
    .row
      .col-sm-6
        form
          .form-group
            .btn-group.btn-group-sm
              button.btn.btn-default#btnRun
                i.fa.fa-refresh
                = ' Run'
              button.btn.btn-default#btnPlay(disabled)
                span#btnPlayText
                  i.fa.fa-play
                  = ' Play'
                span#btnPauseText(style='display:none')
                  i.fa.fa-pause
                  = ' Pause'
          textarea.form-control
      .col-sm-6
        canvas(width='0' height='0')

append scripts
  script(src='//cdnjs.cloudflare.com/ajax/libs/processing.js/1.6.6/processing.min.js')
  script(src='scripts.coffee')
