body
  margin 0
  padding 16px
  font-size 14px
  line-height 1.5
  color #333
  background url("kluckfack.png") center 32px

a
  color #08c
  text-decoration none

  &:hover
    color #058
    text-decoration underline

.wrapper
  margin 0 auto
  padding 16px
  width 800px
  background-color #fff
  background-color rgba(255,255,255,.9)
  box-shadow 0 0 32px rgba(0,0,0,.4)

hr
  margin 1em auto
  border none
  clear both
  background-color transparent
  font-size 100%

  &:before
    display block
    font-size 3em
    text-align center
    content "\2767"
    color #999

h1
  width 800px
  height 450px
  overflow hidden
  margin 0

  &:before
    content url("kluckfack.png")

p
  margin .5em 0
  width 80%
  float left

  &.note
    float none
    width 18%
    margin-left 82%
    font-size 85%

  &.host
  &.guest
  &.note
    b
      display inline-block
      margin-right .5em

  &.host
  &.guest
    b
      min-width 2.5em

  &.host
    b
      color #393

  &.guest
    b
      color #c36

  &:not([class])
    text-indent 1em

sup
  color #933

.cb
  clear both
  width 100%
  height 0
  overflow hidden
