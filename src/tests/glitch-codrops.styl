// cf. https://github.com/codrops/CSSGlitchEffect

gap-horizontal = 10px
gap-vertical = 5px
duration = 4s
delay = 2s
image-url = 'https://placeimg.com/320/240/any'
image-width = 320px
image-height = 240px
blend-mode-1 = none
blend-mode-2 = none
blend-mode-3 = none
blend-mode-4 = overlay
blend-mode-5 = overlay
blend-color-1 = transparent
blend-color-2 = transparent
blend-color-3 = transparent
blend-color-4 = #fb909a
blend-color-5 = #1c1cc9

.glitch-codrops-text
  color #fff
  animation glitch-codrops-text duration linear (delay + duration * 0.2)  infinite

@keyframes glitch-codrops-text
  0%
    transform translate3d(-1 * gap-horizontal, 0, 0) scale3d(-1, -1, 1)
    clip-path polygon(0 20%, 100% 20%, 100% 21%, 0 21%)
  2%
    clip-path polygon(0 33%, 100% 33%, 100% 33%, 0 33%)
  4%
    clip-path polygon(0 44%, 100% 44%, 100% 44%, 0 44%)
  5%
    clip-path polygon(0 50%, 100% 50%, 100% 20%, 0 20%)
  6%
    clip-path polygon(0 70%, 100% 70%, 100% 70%, 0 70%)
  7%
    clip-path polygon(0 80%, 100% 80%, 100% 80%, 0 80%)
  8%
    clip-path polygon(0 50%, 100% 50%, 100% 55%, 0 55%)
  9%
    clip-path polygon(0 70%, 100% 70%, 100% 80%, 0 80%)
  9.9%
    transform translate3d(-1 * gap-horizontal, 0, 0) scale3d(-1, -1, 1)
  10%, 100%
    transform translate3d(0, 0, 0) scale3d(1, 1, 1)
    clip-path polygon(0 0, 100% 0, 100% 100%, 0% 100%)

.glitch-codrops-images
  position relative
  display inline-block
  width image-width
  height image-height
  vertical-align middle

.glitch-codrops-image
  position absolute
  width image-width
  height image-height
  transform translate3d(0, 0, 0)
  background blend-color-1 url(image-url) no-repeat 50% 0
  background-blend-mode blend-mode-1

  &:nth-child(n+2)
    opacity 0
    animation duration linear delay infinite

  for i in 2 3 4 5
    &:nth-child({i})
      background-color lookup('blend-color-' + i)
      background-blend-mode lookup('blend-mode-' + i)
      animation-name unquote('glitch-codrops-' + i)

