  20%
    clip-path polygon(0 70%, 100% 70%, 100% 80%, 0 80%)
  21.9%
    opacity 1
    transform translate3d(gap-horizontal, 0, 0)
  22%, 100%
    opacity 0
    transform translate3d(0, 0, 0)
    clip-path polygon(0 0, 0 0, 0 0, 0 0)

