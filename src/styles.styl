body
  margin 0
  font 18px/1.234 'Shrikhand', cursive
  color #333
  background #7e429c url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='128' height='128' viewBox='0 0 2 2'><rect width='2' height='2' fill='%237e429c'/><path d='M0,0V2H1V0zM0,0H2V1H0z' fill='%23975eb0' fill-rule='evenodd'/></svg>")
  shadow-color = rgba(255,255,255,0.25)
  text-shadow -1px -1px shadow-color, 1px -1px shadow-color, -1px 1px shadow-color, 1px 1px shadow-color;

  &.hide-content .wrapper
    opacity 0

.wrapper
  padding 0 2em 100%
  margin-bottom -100%
  overflow hidden
  float left
  width 100%
  background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='3' height='3'><rect width='3' height='3' fill='%23ffffff' opacity='0.25'/><rect width='1' height='3' fill='%23ffffff' opacity='0.25' x='2'/><rect width='3' height='1' fill='%23ffffff' opacity='0.25' y='2'/></svg>")
  box-sizing border-box
  transition: opacity linear .25s

a
  padding .2em .1em 0
  color #000
  text-decoration none
  transition all ease-out .5s

  &:hover
    color #fff
    background-color #7e429c
    text-shadow none

header
section
footer
  max-width 40em
  margin 0 auto

header
  ul
    padding-left 0
    list-style none

    li
      display inline

      &:before
        content ' - '

      &:first-child:before
        content none

section
  p
    text-indent 2em

  dt
    clear left
    float left
    width 5em
    font-weight bold
    text-align right

  dd
    margin-left 5em

    &:before
      content '\00a0'

.anime
  position fixed
  top 0
  left 0
  z-index -1
  width 100%
  height 100%
  background-position center center
  background-size cover
  opacity 0
  transition opacity ease .5s
